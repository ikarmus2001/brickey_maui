<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="brickey_maui.SetupRebrickablePage"
             Title="API Setup">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False"  />
    </Shell.BackButtonBehavior>
    
    <VerticalStackLayout Margin="15">
        <Label 
            Text="To begin using app you have to be registered on Rebrickable and generate API Key"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button x:Name="GoToSiteBtn"
                Text="Get API Key"
                Clicked="GetApiKey_Click"
                Style="{StaticResource MainPageButtons}"/>

        <Entry 
            x:Name="ApiKeyEntry"
            Placeholder="API Key"/>
        
        <Entry 
            x:Name="UsernameEntry"
            Placeholder="Username"/>

        <Entry 
            x:Name="PasswordEntry" 
            Placeholder="Password"
            IsPassword="True"/>

        <Button 
            x:Name="SaveBtn"
            Text="Save and check"
            Clicked="SaveBtn_Clicked"
            Style="{StaticResource MainPageButtons}"/>

    </VerticalStackLayout>
</ContentPage>