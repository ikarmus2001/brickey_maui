<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="brickey_maui.SetupRebrickablePage"
             Title="SetupRebrickablePage">
    <VerticalStackLayout>
        <Label 
            Text="To begin using app you have to be registered on Rebrickable and generate API Key"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button x:Name="GoToSiteBtn"
                Text="Rebrickable API Key"
                Clicked="GoToSiteBtn_Clicked"/>

        <Entry 
            x:Name="ApiKeyEntry"
            Placeholder="API Key"/>
        
        <Entry 
            x:Name="UsernameEntry"
            Placeholder="Username"/>

        <Entry 
            x:Name="PasswordEntry" 
           Placeholder="Password"
           IsPassword="True"/>

        <Button 
            x:Name="SaveBtn"
            Text="Save"
            Clicked="SaveBtn_Clicked"/>

    </VerticalStackLayout>
</ContentPage>