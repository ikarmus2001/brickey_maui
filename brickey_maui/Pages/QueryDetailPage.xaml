<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:brickey_maui.ViewModel"
             xmlns:model="clr-namespace:brickey_maui.Models"
             x:DataType="viewmodel:QueryDetailPageViewModel"
             x:Class="brickey_maui.Pages.QueryDetailPage"
             Title="">
    <VerticalStackLayout>
        <CarouselView ItemsSource="{Binding Images}" />
        
        <Label x:Name="TitleLbl"
               Text="{Binding Title}" />
        
        <Label x:Name="DescriptionLabel"
               Text="{Binding Description}" />
    </VerticalStackLayout>
</ContentPage>