<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:brickey_maui.ViewModel"
             x:Class="brickey_maui.Pages.MainPage"
             x:DataType="viewmodel:MainPageViewModel"
             Title="MainPage"
             Loaded="ContentPage_Loaded">

    <Grid RowDefinitions="3*, auto, 3*"
          ColumnDefinitions="*, 5*, *">

        <Image Grid.ColumnSpan="20" Grid.RowSpan="20" 
               Source="background.png" Aspect="Fill" />

        <Image Grid.Column="1"  Grid.Row="0" 
               HorizontalOptions="Center"
               Source="brickey_logo.png" />

        <Grid Grid.Row="1" x:Name="SearchBarGrid" 
              Grid.ColumnSpan="20" ColumnDefinitions="10*, *" BackgroundColor="Transparent">
            <Entry  x:Name="Searchbar"
                    Text="{Binding SearchbarText}"
                    Grid.Row="1"
                    Placeholder="Here" 
                    VerticalOptions="Center"/>
            
            <Button x:Name="SearchBtn"
                    Grid.Row="1"
                    Grid.Column="1"
                    Clicked="SearchBtn_Clicked"/>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="2" ColumnDefinitions="*"  RowDefinitions="*, *, *" >
            <Button x:Name="MyProfileBtn"
                Grid.Row="0"
                Text="My profile"
                Clicked="MyProfileBtn_Clicked"/>
            
            <Button x:Name="CollectionBtn"
                Grid.Row="1"
                Text="Collection"
                Clicked="CollectionBtn_Clicked"
                SemanticProperties.Hint="SemanticHint"/>

            <Button x:Name="SearchHistoryBtn"
                Grid.Row="2"
                Text="Search history"
                Clicked="SearchHistoryBtn_Clicked"/>
            
            <!--<Button
                Grid.Column="1"
                Grid.Row="3"
                x:Name="PlaceholderBtn"
                Text="Placeholder"
                HorizontalOptions="Center" />-->
        </Grid>
    </Grid>
    
